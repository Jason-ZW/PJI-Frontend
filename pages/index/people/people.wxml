<view class="page__hd">
    <wux-search-bar clear value="{{ searchValue }}" controlled placeholder="请输入人员名称" bind:change="onSearchChange" bind:focus="onSearchFocus" bind:blur="onSearchBlur" bind:confirm="onSearchConfirm" bind:clear="onSearchClear" bind:cancel="onSearchCancel" />
</view>
<view class="page">
    <view class="page__bd">
        <view class="center-block">
            <wux-filterbar items="{{ filterItems }}" bind:change="onFilterChange" bind:open="onFilterOpen" bind:close="onFilterClose" />
            <view class="weui-panel weui-panel_access">
                <view class="weui-panel__bd">
                    <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{ users }}" wx:key="">
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                            <image class="weui-media-box__thumb" src="{{ item.avatar }}" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <wux-col span="8">
                                <view class="weui-media-box__title">{{ item.name }}</view>
                                <view class="weui-media-box__desc">{{ item.center }} - {{ item.role }}</view>
                                <view class="weui-media-box__info">
                                    <view class="weui-media-box__info__meta">授权日期: {{ item.authorization_date }}</view>
                                </view>
                            </wux-col>
                            <wux-col span="4">
                                <view class="panel-btn-view">
                                    <wux-button block type="assertive" size="small"><i class="fa fa-cog"></i> 修改/删除</wux-button>
                                </view>
                            </wux-col>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>