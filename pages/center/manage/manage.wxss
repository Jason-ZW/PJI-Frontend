.UCenter-bg text {
    opacity: 0.8;
}

.UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
}

.UCenter-bg .gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

map, .mapBox {
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

map, .mapBox {
    width: 750rpx;
    height: 300rpx;
}

.item-container {
    margin: 20rpx 20rpx 0rpx 20rpx;
    padding: 15rpx;
    overflow: hidden;
}

.border-container {
    border: 1px solid #ddd;
}

.text-left {
    text-align: left;
}

.text-right {
    text-align: right;
}

.text-bold {
    font-weight: bold;
}

.float-right {
    float: right;
}

.special-bg-green {
    background-color: #02a499;
}

.special-bg-yellow {
    background-color: #f8b425;
}

.special-bg-red {
    background-color: #ec4561;
}

.special-bg-gradual-yellow {
    background-image: linear-gradient(45deg, #f8b425, #ffd366);
    color: #fff;
}

.special-bg-gradual-gray {
    background-image: linear-gradient(45deg, #b2b2b2, #ededed);
    color: #fff;
}

.cu-avatar {
    width: 80rpx;
    height: 80rpx;
}

.margin-left {
    margin-left: 0rpx;
}

.cu-list>.cu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cu-list>.cu-item .move {
    display: flex;
    width: 140rpx;
    height: 100%;
    position: absolute;
    right: 0;
    transform: translateX(100%);
}

.cu-list>.cu-item.move-cur {
    transform: translateX(-140rpx);
}

.cu-list>.cu-item.move-cur-notice {
    transform: translateX(-330rpx);
}

.margin-btn {
    margin: 0rpx 30rpx 15rpx 30rpx;
}

.cu-list.menu-avatar>.cu-item {
    padding-left: 30rpx;
    height: 170rpx;
}

.avatar-special {
    width: 100%;
    height: 100%;
    text-align: center;
    font-variant: small-caps;
    margin: 0;
    padding: 0;
    justify-content: center;
    align-items: center;
    background: #ccc;
    color: #fff;
    position: relative;
    background-size: cover;
    background-position: center;
    vertical-align: middle;
    font-size: 1.5em;
    margin-right: 30rpx;
}

.text-small {
    font-size: 22rpx;
    line-height: 1.5em;
}

.avatar-text-small {
    font-size: 26rpx;
}

.margin-top-special {
    margin-top: 10rpx;
}

.margin-bottom-special {
    margin-bottom: 10rpx;
}

.margin-left-special {
    margin-left: 15rpx;
}

.padding-left-special {
    padding-left: 15rpx;
}

.margin-left-15 {
    margin-left: 15rpx;
}

.notice-list {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.item-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0prx;
    margin: 0rpx;
}

.notice-block {
    height: 100%;
    margin: 15rpx 30rpx;
    -webkit-border-radius: 15rpx;
    -moz-border-radius: 15rpx;
    border-radius: 15rpx;
    padding: 30rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.notice-left {
    display: flex;
    flex-direction: column;
}

.notice-tag {
    position: absolute;
    top: 5rpx;
    left: 5rpx;
    z-index: 1;
}

.notice-avatar {
    display: flex;
    align-items: center;
}

.cu-avatar.xl {
    width: 70rpx;
    height: 70rpx;
}

.notice-middle {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    margin-left: 50rpx;
}

.notice-content {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.notice-time {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    margin-top: 5rpx;
}

.notice-icon {
    position: absolute;
    right: 50rpx;
    font-size: 24rpx;
    margin-left: 30rpx;
}

.notice-dialog-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.cu-form-group input {
    width: 100%;
    border-style: solid;
    border-width: 1rpx;
    border-color: black;
    font-size: 28rpx;
    margin-top: 15px;
    text-align: left;
    padding-left: 5px;
}

.notice-dialog-content {
    width: 100%;
    margin-top: 10rpx;
    border-style: solid;
    border-width: 1rpx;
    border-color: black;
    text-align: left;
}

/* 成员列表 */

page {
    padding-top: 50px;
}

.indexes {
    position: relative;
}

.indexBar {
    position: fixed;
    right: 0px;
    bottom: 0px;
    padding: 10px 10px 10px 30px;
    display: flex;
    align-items: center;
}

.indexBar .indexBar-box {
    width: 20px;
    height: auto;
    background: #fff;
    display: flex;
    flex-direction: column;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
}

.indexBar-item {
    flex: 1;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: #888;
}

movable-view.indexBar-item {
    width: 20px;
    height: 20px;
    z-index: 9;
}

movable-view.indexBar-item::before {
    content: "";
    display: block;
    position: absolute;
    left: 0;
    top: 5px;
    height: 10px;
    width: 2px;
    background-color: #f37b1d;
}

.indexToast {
    position: fixed;
    top: 0;
    right: 40px;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    width: 50px;
    height: 50px;
    border-radius: 5px;
    margin: auto;
    color: #fff;
    line-height: 50px;
    text-align: center;
    font-size: 24px;
}

.member-item-container {
    display: flex;
    flex-direction: column;
    margin-left: 10px;
}

.cu-list.menu-avatar>.cu-item>.cu-avatar {
    position: relative;
    left: 0px;
}
