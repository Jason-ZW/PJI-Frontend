/* 通知公告 */
@import "../../../font-awesome.wxss";

.cu-avatar {
    width: 80rpx;
    height: 80rpx;
}

.cu-list>.cu-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cu-list>.cu-item .move {
    display: flex;
    width: 140rpx;
    height: 100%;
    position: absolute;
    right: 0;
    transform: translateX(100%);
}

.cu-list>.cu-item.move-cur {
    transform: translateX(-140rpx);
}

.cu-list>.cu-item.move-cur-notice {
    transform: translateX(-330rpx);
}

.margin-btn {
    margin: 0rpx 30rpx 15rpx 30rpx;
}

.cu-list.menu-avatar>.cu-item {
    padding-left: 30rpx;
    height: 170rpx;
}

.item-container {
    display: flex;
    flex-direction: column;
    margin: 15rpx;
    padding: 15rpx;
    background: white;
}

.title-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    align-items: center;
    justify-content: center;
}

.item-title {
    word-break: break-all;
    font-size: 35rpx;
    color: black;
    flex: auto;
    margin-right: 15rpx;
}

.item-time {
    font-size: 30rpx;
    color: #959698;
    margin-top: 15rpx;
}

.content-container {
    word-break: break-all;
    font-size: 30rpx;
    color: black;
}

.btn-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.notice-dialog-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.cu-form-group input {
    width: 100%;
    border-style: solid;
    border-width: 1rpx;
    border-color: black;
    font-size: 28rpx;
    margin-top: 15px;
    text-align: left;
    padding-left: 5px;
}

.notice-dialog-content {
    width: 100%;
    margin-top: 10rpx;
    border-style: solid;
    border-width: 1rpx;
    border-color: black;
    text-align: left;
}

page {
    padding-top: 50px;
}

.horizontal-line {
    height: 1px;
    background: #ddd;
    margin: 15rpx 0;
}