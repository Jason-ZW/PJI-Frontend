<view class="cu-custom" style="height:{{CustomBar}}px;">
    <view class="cu-bar fixed bg-gradual-green" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
        <navigator class='action border-custom' open-type="navigateBack" delta="1" hover-class="none" style='width:{{Custom.width}}px;height:{{Custom.height}}px;margin-left:calc(750rpx - {{Custom.right}}px)'>
            <text class='icon-back'></text>
            <text class='icon-homefill'></text>
        </navigator>
        <view class='content' style='top:{{StatusBar}}px;'>基本信息</view>
    </view>
</view>
<!-- 头 -->
<view class="cu-bar bg-white fixed" style="top:{{CustomBar}}px;">
    <view class="flex">
        <view class='avatar-group'>
            <view class="cu-avatar-group">
                <view class='cu-tag radius' style="margin-right: 40rpx;">填</view>
                <view class="cu-avatar round" style="background-image:url({{addAvatar}});"></view>
            </view>
        </view>
    </view>
    <view class="flex">
        <view class='avatar-group'>
            <view class="cu-avatar-group">
                <view wx:if="{{updateAvatarArr.length > 0}}">
                    <view class='cu-tag radius' style="margin-right: 40rpx;">修</view>
                    <view class="cu-avatar round" wx:for="{{updateAvatarArr}}" wx:key style="background-image:url({{item}});"></view>
                </view>
                <view wx:else>
                    <view class='cu-tag radius' style="margin-right: 10rpx;">修</view>
                    <view class='cu-tag radius'>暂无</view>
                </view>
            </view>
        </view>
    </view>
    <view class="flex">
        <view class='avatar-group'>
            <view class="cu-avatar-group">
                <view wx:if="{{approveAvatar.length > 0}}">
                    <view class='cu-tag radius' style="margin-right: 40rpx;">审</view>
                    <view class="cu-avatar round" style="background-image:url({{approveAvatar}});"></view>
                </view>
                <view wx:else>
                    <view class='cu-tag radius' style="margin-right: 10rpx;">审</view>
                    <view class='cu-tag radius'>暂无</view>
                </view>
            </view>
        </view>
    </view>
</view>
<scroll-view scroll-y class="indexes" style='padding-top: 100rpx;height:100%' scroll-with-animation="true" enable-back-to-top="true">
    <view class="VerticalBox" style="height: 100%;">
        <!-- 基本信息 -->
        <scroll-view class="VerticalMain" scroll-y style="height:100%">
            <view class="padding-left-special">
                <view class='cu-bar solid-bottom bg-white'>
                    <view class='action'>
                        <text class='icon-title text-green'></text>基本信息</view>
                    <button class="cu-btn line-black sm" style="margin-right:45rpx;" bindtap="onImportClick">导入</button>
                </view>
                <view class="cu-list menu menu-avatar">
                    <view class="cu-item-special">
                        <view class="cu-form-group disabled">
                            <view class="title">所属中心</view>
                            <input placeholder="暂无所属中心" class='radius' name='input' value="{{centerName}}" disabled></input>
                        </view>
                        <view class="cu-form-group disabled">
                            <view class='title'>姓名</view>
                            <input class='radius' value="{{name}}" disabled></input>
                        </view>
                        <view class="cu-form-group disabled">
                            <view class='title'>ID</view>
                            <input class='radius' value="{{caseNO}}" disabled></input>
                        </view>
                        <view class="cu-form-group disabled">
                            <view class='title'>侧别</view>
                            <input class='radius' value="{{sidePicker[side]}}" disabled></input>

                        </view>
                        <view class="cu-form-group disabled">
                            <view class='title'>部位</view>
                            <input class='radius' value="{{partPicker[part]}}" disabled></input>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>建档日期</view>
                            <picker mode="date" value="{{createDate}}" start="2015-01-01" end="2050-01-01" bindchange="onCreateDateChange">
                                <view class="picker">
                                    {{createDate}}
                                </view>
                            </picker>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>性别</view>
                            <picker bindchange="onSexChange" value="{{sex}}" range="{{sexPicker}}">
                                <view class="picker">
                                    {{sexPicker[sex]}}
                                </view>
                            </picker>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>出生年月</view>
                            <picker mode="date" fields="month" value="{{birthday}}" start="1900-01-01" end="2050-12-31" bindchange="onBirthdayeChange">
                                <view class="picker">
                                    {{birthday}}
                                </view>
                            </picker>
                        </view>
                        <view class="cu-form-group disabled">
                            <view class='title'>年龄</view>
                            <input placeholder="自动生成" class='radius' bindinput="onAgeInput" type="digit" value="{{age}}" disabled></input>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>身高(m)</view>
                            <input placeholder="请注意单位换算" class='radius' bindinput="onHeightInput" type="digit" value="{{height}}"></input>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>体重(Kg)</view>
                            <input placeholder="请注意单位换算" class='radius' bindinput="onWeightInput" type="digit" value="{{weight}}"></input>
                        </view>
                        <view class="cu-form-group disabled">
                            <view class='title'>BMI(Kg/m2)</view>
                            <input class='radius' name='input' value="{{bmi}}" placeholder="自动生成" disabled></input>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>主诊医师</view>
                            <input placeholder="请输入主诊医师姓名" class='radius' bindinput="onChiefDocInput" value="{{chiefDoc}}"></input>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>联系电话1</view>
                            <input placeholder="请输入联系方式" class='radius' bindinput="onTel1Input" value="{{tel1}}"></input>
                        </view>
                        <view class="cu-form-group {{tel2Disabled?'disabled':''}}">
                            <view class='title'>联系电话2</view>
                            <input placeholder="请输入联系方式" class='radius' bindinput="onTel2Input" value='{{tel2}}' disabled='{{tel2Disabled}}'></input>
                            <switch class='green sm' bindchange="onTel2SwitchChange" checked='{{!tel2Disabled}}'></switch>
                        </view>

                        <view class="cu-form-group">
                            <view class='title'>病例类型（本次首诊）</view>
                            <picker bindchange="onTypeChange" value="{{type}}" range="{{typePicker}}">
                                <view class="picker">
                                    {{typePicker[type]}}
                                </view>
                            </picker>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>简要病史</view>
                            <input placeholder='请输入文字, 没有请填"无"' class='radius' bindinput="onMedical_historyInput" value="{{medical_history}}"></input>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>本次症状出现日期</view>
                            <picker mode="date" value="{{duration_symptoms_date}}" start="2015-01-01" end="2050-01-01" bindchange="onDuration_symptoms_dateChange">
                                <view class="picker">
                                    {{duration_symptoms_date}}
                                </view>
                            </picker>
                        </view>
                        <view class="cu-form-group">
                            <view class='title'>本次发病可能诱因</view>
                            <input placeholder='请输入文字, 不适用填NA' class='radius' bindinput="onThis_time_causeInput" value="{{this_time_cause}}"></input>
                        </view>
                        <!-- 既往手术史 -->
                        <view class='cu-bar solid-bottom bg-white'>
                            <view class='action'>
                                <text class='icon-title text-green'></text>既往手术史</view>
                            <view>
                                <switch class='green sm margin-right' bindchange="onHistorySwitchChange" style='margin-left: 15rpx;' checked='{{operation_history}}'></switch>
                            </view>
                        </view>
                        <!-- 初次置换时间 -->
                        <view class="cu-form-group {{first_displace_time_state==0?'disabled':''}}">
                            <view class='title'>初次置换时间</view>
                            <picker mode="date" value="{{first_displace_time}}" start="2015-01-01" end="2050-01-01" bindchange="onFirst_displace_timeChange">
                                <view class="picker">
                                    {{first_displace_time}}
                                </view>
                            </picker>
                        </view>
                        <!-- 初次置换原因 -->
                        <view class="cu-form-group {{first_displace_reason_state==0?'disabled':''}}">
                            <view class='title'>初次置换原因</view>
                            <picker bindchange="onFirst_displace_reasonChange" value="{{first_displace_reason}}" range="{{first_displace_reason_picker}}">
                                <view class="picker">
                                    {{first_displace_reason_picker[first_displace_reason]}}
                                </view>
                            </picker>
                        </view>
                        <!-- 是否本院手术病例 -->
                        <view class="cu-form-group {{is_hospital_operation_state==0?'disabled':''}}">
                            <view class='title'>是否本院手术病例</view>
                            <picker bindchange="onIs_hospital_operationChange" value="{{is_hospital_operation}}" range="{{is_hospital_operation_picker}}">
                                <view class="picker">
                                    {{is_hospital_operation_picker[is_hospital_operation]}}
                                </view>
                            </picker>
                        </view>
                        <!-- 末次手术日期 -->
                        <view class="cu-form-group {{last_operation_date_state==0?'disabled':''}}">
                            <view class='title'>末次手术日期</view>
                            <picker mode="date" value="{{last_operation_date}}" start="2015-01-01" end="2050-01-01" bindchange="onLast_operation_dateChange">
                                <view class="picker">
                                    {{last_operation_date}}
                                </view>
                            </picker>
                        </view>
                        <!-- 已翻修次数 -->
                        <view class="cu-form-group {{repair_count_state==0?'disabled':''}}">
                            <view class='title'>已翻修次数</view>
                            <picker bindchange="onRepair_countChange" value="{{repair_count}}" range="{{repair_count_picker}}">
                                <view class="picker">
                                    {{repair_count_picker[repair_count]}}
                                </view>
                            </picker>
                        </view>
                        <!-- 合并症 -->
                        <view class='cu-bar solid-bottom bg-white' bindtap="onShowDrawer">
                            <view class='action'>
                                <text class='icon-title text-green'></text>合并症</view>
                            <i class="fa fa-angle-right fa-2x" style="margin-right:30rpx"></i>
                        </view>
                        <!-- 知情同意 -->
                        <view class='cu-bar solid-bottom bg-white disabled' bindtap="onShowDrawer">
                            <view class='action'>
                                <text class='icon-title text-green'></text>知情同意</view>
                            <input class='radius' style="margin-right:30rpx" disabled value="{{is_agree==0?'无':'有'}}"></input>
                        </view>
                        <!-- 知情同意附件 -->
                        <view class="cu-form-group  {{is_agree_state==1?'':'clock'}}">
                            <view style='display:flex;flex-direction: column; '>
                                <view class='title' style="text-align:left">知情同意附件</view>
                                <view class="grid col-3 grid-square flex-sub centerPlace" style="margin:0">
                                    <view class="imageShow solids padding-xs" wx:if="{{is_agree_pic !== ''}}">
                                        <image src="{{is_agree_pic}}" mode='aspectFit' bindtap="showImageModal" data-img="{{is_agree_pic}}" />
                                        <button class='cu-btn bg-red shadow sm' bindtap="onRemovePic">
                                            删除
                                        </button>
                                    </view>
                                    <view class="padding-xs solids imageAdd" wx:if="{{is_agree_pic == ''}}">
                                        <text class='icon-cameraadd' bindtap="onChooseImage"></text>
                                    </view>
                                </view>
                            </view>
                            <i class="fa fa-{{is_agree_state==1?'pencil':'clock-o'}} fa-2x" bindtap="onAgreeStateChange"></i>
                        </view>

                    </view>
                </view>
            </view>

            <!-- 底部按钮 -->
            <view class="btn-block bg-white shadow" hidden='{{isLook}}'>
                <view class="flex margin-special">
                    <button wx:if="{{isEdit || isCreate}}" class='cu-btn line-green shadow' style="margin-right: 15rpx;" form-type="submit" bindtap='submit' disabled='{{caseInfo.base_submit_button == 0}}'>
                        提交录入
                    </button>
                    <button wx:else class='cu-btn line-green shadow' style="margin-right: 15rpx;" form-type="submit" bindtap="onSetCaseWrite">
                        开始编辑
                    </button>
                    <button class='cu-btn bg-green shadow' style="margin-left: 15rpx;" form-type="submit" bindtap='verify' disabled='{{isCreate || caseInfo.approve_button == 2}}'>
                        {{caseInfo.base_state != 2 ?"确认审核":"解除锁定"}}
                    </button>
                </view>
            </view>
        </scroll-view>
    </view>
</scroll-view>

<!-- 模态对话框 -->
<view class='load-progress {{loadProgress!=0?"show":"hide"}}' style="top:{{CustomBar}}px;">
    <view class='load-progress-bar bg-green' style="transform: translate3d(-{{100-loadProgress}}%, 0px, 0px);"></view>
    <view class='load-progress-spinner text-green'></view>
</view>

