@import "../../css/font-awesome.wxss";
@import "../../css/common.wxss";
@import "../../css/weui.wxss";
@import "../../miniprogram_npm/wux-weapp/styles/index.wxss";
.page {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 40rpx;
    box-sizing: border-box;
    background-color: #f8f8f8;
    padding-top: 90rpx;
    width: 100%;
}
.page__hd {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    z-index: 999;
}
.page__bd {
    width: 100%;
}
.case-block {
    margin-bottom: 20rpx;
}
.btn-field {
    font-size: 26rpx;
    text-align: center;
    min-width: 70rpx;
}
.input-field {
    text-align: left;
    margin-bottom: 30rpx;
}
.radio-view {
    width:100%;
    height:30rpx;
    font-size:26rpx;
}
.weui-media-box__info {
    font-size: 26rpx;
}
.weui-media-box__desc {
    font-size: 26rpx;
}
.weui-media-box__title {
    font-size: 26rpx;
}