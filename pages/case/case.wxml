<view class="page__hd">
    <wux-search-bar clear value="{{ searchValue }}" controlled placeholder="请输入患者名称" bind:change="onSearchChange" bind:focus="onSearchFocus" bind:blur="onSearchBlur" bind:confirm="onSearchConfirm" bind:clear="onSearchClear" bind:cancel="onSearchCancel" />
</view>
<view class="page">
    <view class="page__bd">
        <view class="case-block">
            <wux-filterbar items="{{ filterItems }}" bind:change="onFilterChange" bind:open="onFilterOpen" bind:close="onFilterClose" />
            <view class="weui-panel weui-panel_access">
                <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{ cases }}" wx:key="">
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <wux-col span="5">
                            <view class="weui-media-box__title">{{ item.name }}</view>
                            <view class="weui-media-box__desc">{{ item.id }}</view>
                            <view class="weui-media-box__info">
                                <view class="weui-media-box__info__meta">建档日期: {{ item.create_date }}</view>
                            </view>
                        </wux-col>
                        <wux-col span="4">
                            <view class="weui-media-box__title" style="color: #999;">完成度: {{ item.completeness }}%</view>
                            <wux-progress bar-style="background-color: #5cb85c" percent="{{ item.completeness }}" />
                        </wux-col>
                        <wux-col span="3">

                        </wux-col>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>