<view class='top-container cu-list card-menu' style="margin-top:150rpx;">
	<view class="cu-avatar round xl bg-gray" style="background-image:url({{avatarUrl}});"></view>
	<view class="right-container">
		<view class="line-container">{{userInfo.name}}({{nickName}})</view>
		<view class="line-container">
			<text class='icon-phone text-gray'></text>
			<text class='text-grey' style="margin-left:10rpx">电话: {{userInfo.phone}}</text>
		</view>
		<view class="line-container">
			<text class='icon-mail text-gray'></text>
			<text class='text-grey' style="margin-left:10rpx">邮箱: {{userInfo.email?userInfo.email:'暂无'}}</text>
		</view>
	</view>

</view>
<view class='statis-container cu-list card-menu shadow-lg'>
	<view class='flex flex-sub flex-direction solid-right static-container'>
		<view class="text-xxl text-blue text-decoration">{{userInfo.puncture_count}}</view>
		<view class="margin-top-sm">
			<text class='icon-cardboardfill'></text> 诊断穿刺
		</view>
	</view>
	<view class='flex flex-sub flex-direction solid-right static-container'>
		<view class="text-xxl text-blue text-decoration">{{userInfo.bein_count}}</view>
		<view class="margin-top-sm">
			<text class='icon-taoxiaopu'></text> 手术治疗
		</view>
	</view>
	<view class='flex flex-sub flex-direction solid-right static-container'>
		<view class="text-xxl text-blue text-decoration">{{userInfo.followup_count}}</view>
		<view class="margin-top-sm">
			<text class='icon-taoxiaopu'></text> 门诊随访
		</view>
	</view>
</view>
<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
	<view class="cu-item">
		<view class='content' hover-class='none' bindtap="showDrawer" data-target="DrawerModalRight">
			<view style="display:flex;flex-direction:row;" class='action title-style-3'>
				<text class='text-xl text-bold text-grey'>系统消息</text>
				<text style="flex:2;text-align:right;margin-right:20px;" class='text-xl text-bold text-red self-end margin-left-sm'>{{userInfo.system_count}}</text>
			</view>
		</view>
	</view>
	<view class="cu-item">
		<view class='content' hover-class='none' bindtap="showDrawer" data-target="SpecimenDrawer">
			<view style="display:flex;flex-direction:row;" class='action title-style-3'>
				<text class='text-xl text-bold text-grey'>标本授权</text>
				<text style="flex:2;text-align:right;margin-right:20px;" class='text-xl text-bold text-red self-end margin-left-sm'>{{userInfo.auth_count}}</text>
			</view>
		</view>
	</view>
</view>
