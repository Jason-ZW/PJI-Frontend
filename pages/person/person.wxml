<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
	<view class="cu-item">
		<view class='content' hover-class='none'>
			<view class='action title-style-3'>
				<text class='text-xl text-bold text-grey'>所属中心</text>
				<!-- <text class='text-Abc text-gray self-end margin-left-sm'>Center</text> -->
			</view>
		</view>
	</view>
	<view class="cu-item" wx:for="{{userInfo.center_list}}" wx:key="id">
		<view class='content' hover-class='none' style="display:flex;flex-direction:row;just-content:center">
			<text class='text-grey' style="flex:1">{{item.center_name}}</text>
			<view class='cu-tag radius' style="margin-left: 15rpx;">{{item.role_list[0].role_name}}</view>
		</view>
	</view>
</view>
<view class='cu-tabbar-height'></view>
<view class='load-progress {{loadProgress!=0?"show":"hide"}}' style="top:{{CustomBar}}px;">
	<view class='load-progress-bar bg-green' style="transform: translate3d(-{{100-loadProgress}}%, 0px, 0px);"></view>
	<view class='load-progress-spinner text-green'></view>
</view>
<view class='cu-load load-modal' wx:if="{{loadModal}}">
	<view class='gray-text'>处理中...</view>
</view>
<view class="load-curtain" wx:if="{{loadProgress!=0}}"></view>
<view class="cu-modal drawer-modal justify-end {{modalName=='DrawerModalRight'?'show':''}}" bindtap='hideModal'>
	<view class="cu-dialog basis-lg" catchtap="ignoreTap" style="top:{{CustomBar}}px;height:100%;width:100%;padding-bottom: 145rpx;">
		<scroll-view scroll-y class="bg-white nav text-center" style="height:100%;width:100%;padding-bottom: 115rpx;">
			<view class="cu-item text-green cur">
				需我审批
			</view>
			<view wx:for='{{approveList}}' wx:key="apply_id">
				<block>
					<view class="content item-container border-container">
						<view class="text-bold">{{item.order_number}}</view>
						<view class="text-left margin-top">姓名: {{item.name}}</view>
						<view class="text-left">电话: {{item.phone}}</view>
						<view class="text-left">邮箱: {{item.email}}</view>
						<view class="text-left">申请中心: {{item.center_name}}</view>
						<view class="text-left">申请角色: {{item.role_name}}</view>
						<view class="text-left">申请日期: {{item.apply_time}}</view>
						<view class="grid margin-top float-right">
							<view class="grid col-6">
								<view class="cu-btn round sm bg-green" data-applyid="{{item.apply_id}}" bindtap="onApprove">同意</view>
							</view>
							<view class="grid col-6">
								<view class="cu-btn round sm bg-red" data-applyid="{{item.apply_id}}" bindtap="onRefuse" style="margin-left: 10rpx;"> 拒绝</view>
							</view>
						</view>
					</view>
				</block>
			</view>
		</scroll-view>
	</view>
</view>
<!-- 标本授权 -->
<view class="cu-modal drawer-modal justify-end {{modalName=='SpecimenDrawer'?'show':''}}" bindtap='hideModal'>
	<view class="cu-dialog basis-lg" catchtap="ignoreTap" style="top:{{CustomBar}}px;height:100%;width:100%;padding-bottom: 145rpx;">
		<scroll-view scroll-y class="bg-white nav text-center" style="height:100%;width:100%;padding-bottom: 115rpx;">
			<view class="cu-item {{index==TabCur?'text-green cur':''}}" wx:for="{{tabItems}}" wx:key="id" bindtap='tabSelect' data-id="{{index}}">
				{{tabItems[index]}}
			</view>
			<!-- 我的申请 -->
			<view wx:for='{{specimenApplyList}}' wx:key="apply_id" wx:if="{{TabCur==0}}">
				<block>
					<view class="content item-container border-container">
						<view class="text-bold">{{item.auth_id}}</view>
						<view class="text-left margin-top">姓名: {{item.auth_staff_name}}</view>
						<view class="text-left">申请日期: {{item.apply_time}}</view>
						<view class="text-left" wx:if="{{item.state!=0}}">审批日期: {{item.auth_time}}</view>
						<view class="text-left">申请状态: {{item.state_name}}</view>
					</view>
				</block>
			</view>
			<!-- 需我授权 -->
			<view wx:for='{{specimenApproveList}}' wx:key="auth_id" wx:if="{{TabCur==1}}">
				<block>
					<view class="content item-container border-container">
						<view class="text-bold">{{item.auth_id}}</view>
						<view class="text-left margin-top">姓名: {{item.staff_name}}</view>
						<view class="text-left">申请日期: {{item.apply_time}}</view>
						<view class="text-left">申请状态: {{item.state_name}}</view>
						<view class="grid margin-top float-right" wx:if="{{item.state==0}}">
							<view class="grid col-6">
								<view class="cu-btn round sm bg-green" data-authid="{{item.auth_id}}" bindtap="onSpecimenApprove">同意</view>
							</view>
							<view class="grid col-6">
								<view class="cu-btn round sm bg-red" data-authid="{{item.auth_id}}" bindtap="onSpecimenRefuse" style="margin-left: 10rpx;"> 拒绝</view>
							</view>
						</view>
					</view>
				</block>
			</view>
			<button class='cu-btn bg-green shadow margin-btn block' style="margin:30rpx;" bindtap="gotoSpecimenAuth">
				申请标本授权
			</button>
		</scroll-view>
	</view>
</view>