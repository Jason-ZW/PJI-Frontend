@import "../../css/font-awesome.wxss";
@import "../../miniprogram_npm/wux-weapp/styles/index.wxss";
page {
    height: 100%;
}
.page {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx 0;
    box-sizing: border-box;
}
.page__hd {
    text-align: center;
}
.app-title {
    margin-top: 40rpx;
}
.auth-btn {
    width: 100%;
}
.notice-txt {
    font-size: 24rpx;
    margin: 60rpx 0rpx;
}

@media screen and (max-height: 812px) {
    .page {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding: 200rpx 0;
        box-sizing: border-box;
    }
}